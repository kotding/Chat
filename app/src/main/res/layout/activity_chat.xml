<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ChatActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:background="@color/my_primary"
        android:id="@+id/main_toolbar">

        <ImageButton
            android:id="@+id/chat_back_btn"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginStart="5dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:scaleType="centerCrop"
            android:src="@drawable/icon_back"
            android:layout_centerVertical="true"
            app:tint="@color/white" />

        <include layout="@layout/profile_pic_view"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_toRightOf="@+id/chat_back_btn"
            android:id="@+id/profile_pick_layout"/>

        <TextView
            android:id="@+id/orther_username_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:text="Non zl"
            android:textColor="@color/white"
            android:textSize="25sp"
            android:textStyle="bold"
            android:layout_toRightOf="@id/profile_pick_layout"
            android:layout_centerVertical="true" />

    </RelativeLayout>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/chat_recycle_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/main_toolbar"
        android:layout_above="@id/bottom_layout"/>
    <RelativeLayout
        android:id="@+id/bottom_layout"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:padding="10dp"
        android:layout_alignParentBottom="true">

        <EditText
            android:layout_width="match_parent"
            android:height="40dp"
            android:hint="Enter messenge...."
            android:textSize="20sp"
            android:layout_height="wrap_content"
            android:id="@+id/input_messenge_edt"
            android:layout_margin="10dp"
            android:elevation="4dp"
            android:background="@drawable/edit_text_rounded_corner"
            android:layout_toLeftOf="@id/messenge_send_btn"
            android:layout_centerInParent="true"/>
        <Button
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/send_icon"
            android:layout_centerVertical="true"
            app:tint="@color/my_primary"
            android:id="@+id/messenge_send_btn"
            android:layout_alignParentEnd="true" />

    </RelativeLayout>
</RelativeLayout>